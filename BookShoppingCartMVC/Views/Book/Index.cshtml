@model IEnumerable<BookShoppingCartMVC.Models.Book>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }



    <!-- DataTales Example -->
    <div class="card shadow my-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Book List</h6>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="content">
                            <th>
                                @Html.DisplayNameFor(model => model.BookName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AuthorName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Genre)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AuthorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    <img src="../images/book/@Html.DisplayFor(modelItem => item.Image)" style="width: 100px; height:100px;"/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genre.GenreName)
                                </td>
                                <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>

                                    <!-- Details Button with Icon -->
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>

                                    <!-- Delete Button with Icon -->
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
